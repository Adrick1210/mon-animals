<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/header.ejs") %>
    <div class="btn-add">
      <a href="/animals/new" class="btn btn-primary" role="button"
        >Add Animal</a
      >
    </div>
    <main>
      <div class="main-container">
        <% for (let animal of animals) { %>
        <div class="list-container">
          <a href="/animals/<%= animal._id %>">
            <h2>
              <%= animal.species %> - <%= animal.extinct ? "Not Around" : "Still Around" %>
            </h2>
          </a>
        </div>
        <% } %>
      </div>
    </main>
  </body>
</html>
